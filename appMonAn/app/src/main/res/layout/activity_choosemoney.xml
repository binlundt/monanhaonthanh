<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Resutl.choosemoney">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_id"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_rs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/namemoney" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/bk"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/nameapp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/nameapp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="70dp">
    </ImageView>

    <androidx.cardview.widget.CardView
        android:id="@+id/money1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/cd_id"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bk"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/texttien"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:fontFamily="@font/font5"
            android:text="Dưới 100.000VND"
            android:textColor="@color/mau"
            android:textSize="50sp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/money2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/money1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bk"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dưới 200.000VND"
            android:textSize="50sp"
            android:fontFamily="@font/font5"
            android:textColor="@color/mau"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/money3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/money2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bk"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dưới 300.000VND"
            android:textSize="50sp"
            android:fontFamily="@font/font5"
            android:textColor="@color/mau"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

