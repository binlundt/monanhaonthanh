<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="FragmentLayout.callmainscreen">
<!--mang hinh home-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="-31dp"
        android:src="@drawable/bk">

    </ImageView>

    <ImageView
        android:id="@+id/thongbao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thongbao"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="27dp">
    </ImageView>
    <ImageView
        android:id="@+id/taskmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/taskmenu"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp">
    </ImageView>

    <ImageView
        android:id="@+id/nameapp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/nameapp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="70dp">
    </ImageView>

    <EditText
        android:id="@+id/editText"
        android:layout_width="287dp"
        android:layout_height="46dp"
        android:layout_below="@+id/nameapp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/search"
        android:ems="10"
        android:hint="Tìm kiếm..."
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="28dp"
        android:layout_toEndOf="@+id/editText"
        android:src="@drawable/sea" />

    <HorizontalScrollView
        android:id="@+id/scr1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="165dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/a1" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-250dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/im01" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-250dp"
                app:srcCompat="@drawable/a1" />
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-250dp"
                app:srcCompat="@drawable/a1" />

        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_marginTop="20dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scr1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/i1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/im"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/im"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>